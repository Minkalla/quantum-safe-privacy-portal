# PQC Development Environment - WBS 1.2.2 Configuration
NODE_ENV=pqc_development
MONGODB_URI=${MONGODB_URI} # MongoDB Atlas connection
MONGO_URI=${MONGODB_URI} # MongoDB Atlas connection

# PQC Feature Flags - NIST Approved Algorithms (WBS 1.2.2)
PQC_ENABLED=true
PQC_ALGORITHM_KYBER=true  # Kyber-768 (pqcrypto-kyber v0.8.1)
PQC_ALGORITHM_DILITHIUM=true  # Dilithium-3 (pqcrypto-dilithium v0.5.0)
PQC_FFI_DEBUG=true
PQC_PERFORMANCE_MONITORING=true

# Security Settings (Use environment-specific generation in actual deployment)
JWT_ACCESS_SECRET_ID=REPLACE_WITH_GENERATED_ACCESS_SECRET
JWT_REFRESH_SECRET_ID=REPLACE_WITH_GENERATED_REFRESH_SECRET

# Logging
LOG_LEVEL=debug
PQC_CRYPTO_LOGGING=verbose
