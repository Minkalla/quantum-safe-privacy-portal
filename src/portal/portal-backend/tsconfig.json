{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "declaration": true,
    "incremental": true,
    "composite": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"], // MODIFIED: Re-introduced 'types' array with Jest and Node
    "typeRoots": ["./node_modules/@types", "./types"], // Ensure './types' is included in typeRoots
    "moduleResolution": "node" // Re-introduced moduleResolution
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts" // Explicitly include custom .d.ts files
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}