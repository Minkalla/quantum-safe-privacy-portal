{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "esnext", "dom"], // Added 'dom' back, as Request/Response types often rely on it implicitly
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true, // Keep strictness
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "declaration": true,
    "incremental": true,
    "composite": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"], // MODIFIED: Explicitly include 'jest' and 'node' types again
    "typeRoots": ["./node_modules/@types", "./types"], // Ensure both standard and custom type roots are included
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts" // Explicitly include custom .d.ts files
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}